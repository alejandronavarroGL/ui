{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
    ],
    "paths": {
      "@unicodernsui/core": ["packages/core/src"],
      "@unicodernsui/button-close": ["packages/button-close/src"],
      "@unicodernsui/custom-theme": ["packages/custom-theme/src"],
      "@unicodernsui/alert": ["packages/alert/src"],
      "@unicodernsui/button": ["packages/button/src"],
      "@unicodernsui/transition": ["packages/transition/src"],
      "@unicodernsui/tooltip": ["packages/tooltip/src"],
      "@unicodernsui/tabs": ["packages/tabs/src"],
      "@unicodernsui/menu": ["packages/menu/src"],
      "@unicodernsui/modal": ["packages/modal/src"],
      "@unicodernsui/dropdown": ["packages/dropdown/src"],
      "@unicodernsui/toast": ["packages/toast/src"],
      "@unicodernsui/text-area": ["packages/text-area/src"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
